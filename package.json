{
  "name": "mcp-sevalla",
  "private": true,
  "version": "1.0.0",
  "description": "MCP server for Sevalla cloud hosting API",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-sevalla": "dist/index.js"
  },
  "scripts": {
    "build": "rm -rf dist && tsc && chmod +x dist/index.js",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit/",
    "test:dry-run": "vitest run tests/dry-run/",
    "test:integration": "vitest run tests/integration/",
    "test:smoke": "vitest run tests/smoke/"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "dotenv": "^16.4.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "mcp",
    "sevalla",
    "cloud",
    "hosting"
  ],
  "author": "84em.io",
  "license": "MIT"
}
